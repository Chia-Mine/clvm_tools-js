{
  "compilerOptions": {
    "outDir": "./.dist/npm",
    "module": "CommonJS",
    "target": "es2016",
    "allowJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": true,
    "newLine": "lf"
  },
  "include": [
    "bin/**/*",
    "clvm_runtime/**/*",
    "clvm_tools/**/*",
    "ir/**/*",
    "platform/**/*",
    "stages/**/*",
    "index.ts"
  ],
  "exclude": ["node_modules"]
}