{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es6",
    "target": "es2016",
    "allowJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": true,
    "newLine": "lf",
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules"]
}
